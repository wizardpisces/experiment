    "version": "0.2.0",
    "configurations": [

        {
            "name": "mini-svelte",
            "type": "node",
            "request": "launch",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/packages/mini-svelte/test/index.ts"
            ],
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "development",
                "TS_NODE_FILES": "true"
            },
            "console": "integratedTerminal",
            "sourceMaps": true
        }
    ]
}