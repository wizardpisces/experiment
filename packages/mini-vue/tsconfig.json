// tsconfig.json
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        // interop between ESM and CJS modules. Recommended by TS
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports":true,
        "types": [
            "vite/client",
            "node",
            "types"
        ]
    }
}